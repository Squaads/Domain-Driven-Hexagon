{
    "name": "squaads-nest",
    "private": true,
    "version": "1.0.0",
    "description": "Squaads Domain Driven Hexagon",
    "license": "MIT",
    "engines": {
        "node": "^18",
        "npm": "^8"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "docker:build": "docker build -t ddhex .",
        "docker:dev": "npm run dev && docker run -p 3000:3000 ddhex",
        "dev": "cp ./src/config/dev/.env.dev .env",
        "stage": "cp ./src/config/stage/.env.stage .env",
        "prod": "cp ./src/config/prod/.env.prod .env",
        "start": "nest start",
        "start:dev": "npm run dev && nest start --watch",
        "start:stage": "npm run stage && nest start --watch",
        "start:prod": "npm run prod && nest start --watch",
        "start:debug": "nest start --debug --watch",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:clearCache": "jest --clearCache",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepare": "husky install"
    },
    "dependencies": {
        "@nestjs/common": "^9.2.0",
        "@nestjs/config": "^2.2.0",
        "@nestjs/core": "^9.2.0",
        "@nestjs/mapped-types": "^1.2.0",
        "@nestjs/mongoose": "^9.2.1",
        "@nestjs/platform-express": "^9.2.0",
        "@nestjs/swagger": "^6.1.3",
        "@sentry/node": "^7.19.0",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.2",
        "firebase": "^9.12.1",
        "mongoose": "^6.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "swagger-ui-express": "^4.1.6"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-conventional": "^17.1.0",
        "@nestjs/cli": "^9.1.5",
        "@nestjs/schematics": "^9.0.3",
        "@nestjs/testing": "^9.2.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.0.0",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.41.0",
        "@typescript-eslint/parser": "^5.41.0",
        "eslint": "^8.2.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^8.0.1",
        "jest": "^27.0.6",
        "lint-staged": "^13.0.3",
        "prettier": "^2.3.2",
        "prettier-plugin-organize-imports": "^3.1.1",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec|.test\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "modulePaths": [
            "<rootDir>"
        ],
        "moduleDirectories": [
            "node_modules"
        ],
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/$1"
        }
    }
}
